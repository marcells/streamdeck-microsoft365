{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Elgato.Plugins.Microsoft365/Elgato.Plugins.Microsoft365.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Elgato.Plugins.Microsoft365/Elgato.Plugins.Microsoft365.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Elgato.Plugins.Microsoft365/Elgato.Plugins.Microsoft365.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Create package for Elgato store",
            "command": "powershell",
            "type": "process",
            "args": [
                "-ExecutionPolicy",
                "Unrestricted",
                "-NoProfile",
                "-File",
                "${workspaceFolder}/Elgato.Plugins.Microsoft365/CreateElgatoStorePackage.ps1"
            ],
            "dependsOn": "publish",
            "problemMatcher": []
        }
    ]
}